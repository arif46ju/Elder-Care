<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    android:weightSum="21"
    tools:context=".MainActivity">

   <RadioGroup
       android:weightSum="2"
       android:layout_weight="10"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginBottom="15dp"
       >

       <Button
           android:id="@+id/button1"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_marginRight="10dp"
           android:text="Daily Activities"
           />

       <Button
           android:id="@+id/button2"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:text="Medications"
           tools:layout_editor_absoluteX="254sp"
           tools:layout_editor_absoluteY="61sp" />

   </RadioGroup>
    <RadioGroup
        android:layout_weight="10"
        android:weightSum="2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:text="Grocery List"
            tools:layout_editor_absoluteX="89sp"
            tools:layout_editor_absoluteY="61sp" />

        <Button
            android:id="@+id/button4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Online Shopping"
            tools:layout_editor_absoluteX="254sp"
            tools:layout_editor_absoluteY="61sp" />

   </RadioGroup>



        <RadioGroup
            android:weightSum="5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffff"


            >

            <Button
                android:layout_weight="1"
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:background="@drawable/home"
                android:layout_height="50sp"
               android:layout_marginRight="5sp"
                />

            <Button
                android:layout_weight="1"
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/settings"
                />

            <Button
                android:id="@+id/button7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:background="@drawable/about_us"
                android:layout_marginRight="5sp"
                />

            <Button
                android:layout_weight="1"
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/contacts"
                />

            <Button
                android:layout_weight="1"
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:background="@drawable/notofication_bell"
               />
        </RadioGroup>





</LinearLayout>
